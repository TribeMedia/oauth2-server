    <div class="container">
      <form class="form-signin" role="form" action="/authorize" method="post">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">Grant access?</h3>
          </div>
          <div class="panel-body">
            <p>Hi <%= user.firstName %>,</p>
            <p><strong><%= client.name %></strong> is requesting access to <%= scope.join(', ') %> scope(s). Allow?</p>
          </div>
        </div>
        <input name="transaction_id" type="hidden" value="<%= transactionID %>">
        <input name="scope" type="hidden" value="<%= scope.join(' ') %>">
        <button class="btn btn-lg btn-primary btn-block" type="submit" value="Allow" id="allow">Allow</button>
        <button name="cancel" class="btn btn-lg btn-primary btn-block" type="submit" value="Deny" id="deny">Deny</button>
      </form>
    </div>
